@model IEnumerable<Disaster_App.Models.Donation>

@{
    ViewData["Title"] = "View Donations";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-image: url('/images/protruding-squares.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
    }

    .donations-container {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        padding: 40px 20px;
        display: flex;
        justify-content: center;
    }

    .donations-content {
        width: 100%;
        max-width: 1500px;
    }

    .donations-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .donations-title {
        color: #ffffff;
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .donations-subtitle {
        color: #e0e0e0;
        font-size: 1.3rem;
        margin-bottom: 30px;
    }

    .header-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .action-button {
        background: linear-gradient(135deg, #FF7B00, #000000);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .action-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 123, 0, 0.4);
            text-decoration: none;
            color: white;
        }

        .action-button.secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #e0e0e0;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

            .action-button.secondary:hover {
                background: rgba(255, 255, 255, 0.2);
                color: white;
            }

    /* Stats Section - Moved to top */
    .stats-section {
        margin-bottom: 30px;
    }

    .table-stats {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        flex-wrap: wrap;
    }

    .stats-item {
        text-align: center;
        padding: 15px 25px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        min-width: 120px;
        transition: all 0.3s ease;
    }

        .stats-item:hover {
            transform: translateY(-2px);
            background: rgba(0, 0, 0, 0.4);
            border-color: rgba(255, 255, 255, 0.3);
        }

    .stats-label {
        display: block;
        color: #e0e0e0;
        font-size: 0.8rem;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stats-value {
        display: block;
        color: #ffffff;
        font-size: 1.5rem;
        font-weight: bold;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .donations-table-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        color: white;
        font-size: 0.95rem;
    }

        .modern-table th {
            background: rgba(93, 173, 226, 0.2);
            color: #5DADE2;
            font-weight: bold;
            padding: 15px 12px;
            text-align: left;
            border-bottom: 2px solid rgba(93, 173, 226, 0.3);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 15px 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .modern-table tbody tr:hover {
            background: rgba(255, 255, 255, 0.08);
        }

        .modern-table tbody tr:last-child td {
            border-bottom: none;
        }

    .donation-id {
        font-weight: bold;
        color: #1AC782;
        font-family: 'Courier New', monospace;
    }

    .donor-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .donor-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 193, 7, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid rgba(255, 193, 7, 0.3);
    }

    .avatar-icon {
        font-size: 1.2rem;
    }

    .donor-details {
        display: flex;
        flex-direction: column;
    }

    .donor-email {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        margin-top: 2px;
    }

    .resource-details {
        max-width: 200px;
    }

    .resource-type {
        color: #AED6F1;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .resource-description {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.85rem;
        line-height: 1.3;
    }

    .donation-quantity {
        text-align: center;
    }

    .quantity-badge {
        background: rgba(93, 173, 226, 0.2);
        border: 1px solid rgba(93, 173, 226, 0.3);
        border-radius: 15px;
        padding: 8px 12px;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        min-width: 60px;
    }

    .quantity-number {
        color: #5DADE2;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .quantity-label {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .donation-date {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
    }

    .date-time {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 2px;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .status-pending {
        background: rgba(255, 193, 7, 0.2);
        color: #FFC107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .status-distributed {
        background: rgba(76, 175, 80, 0.2);
        color: #4CAF50;
        border: 1px solid rgba(76, 175, 80, 0.3);
    }

    .contact-info {
        font-size: 0.9rem;
    }

    .contact-phone {
        color: #AED6F1;
    }

    .pickup-location {
        max-width: 150px;
    }

    .location-text {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
        line-height: 1.3;
    }

    .donation-actions {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .action-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 6px;
        padding: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .action-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }

    .view-btn:hover {
        background: rgba(33, 150, 243, 0.3);
    }

    .status-btn:hover {
        background: rgba(255, 193, 7, 0.3);
    }

    .contact-btn:hover {
        background: rgba(76, 175, 80, 0.3);
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.5) !important;
        font-style: italic;
    }

    .no-donations {
        text-align: center;
        padding: 60px 20px;
        color: #AED6F1;
    }

    .no-donations-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.7;
    }

    .no-donations h3 {
        color: #5DADE2;
        margin-bottom: 10px;
        font-size: 1.5rem;
    }

    .no-donations p {
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .donations-container {
            padding: 20px 10px;
        }

        .donations-title {
            font-size: 2.2rem;
        }

        .donations-subtitle {
            font-size: 1.1rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: center;
        }

        .action-button {
            width: 100%;
            max-width: 250px;
            justify-content: center;
        }

        .table-stats {
            gap: 10px;
            padding: 20px;
        }

        .stats-item {
            padding: 12px 20px;
            flex: 1;
            min-width: 100px;
        }

        .stats-value {
            font-size: 1.3rem;
        }

        .donations-table-container {
            padding: 20px 15px;
            overflow-x: auto;
        }

        .modern-table {
            font-size: 0.85rem;
            min-width: 1200px;
        }

            .modern-table th,
            .modern-table td {
                padding: 12px 8px;
            }
    }

    @@media (max-width: 480px) {
        .donations-title {
            font-size: 1.8rem;
        }

        .donations-subtitle {
            font-size: 1rem;
        }

        .table-stats {
            flex-direction: column;
            align-items: center;
        }

        .stats-item {
            width: 100%;
            max-width: 200px;
        }
    }
</style>

<!-- Background Image Container -->
<div class="background-container">
    <div class="background-overlay"></div>
</div>

<div class="donations-container">
    <div class="donations-content">
        <div class="donations-header">
            <h1 class="donations-title">Donations Received</h1>
            <p class="donations-subtitle">Generous contributions making a difference in our community</p>

            <div class="header-actions">
                <a href="@Url.Action("LogDonation", "Home")" class="action-button">
                    <span class="button-icon">➕</span>
                    Make New Donation
                </a>
                <a href="@Url.Action("UserHome", "Home")" class="action-button secondary">
                    <span class="button-icon">🏠</span>
                    Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Stats Section - Moved below navigation/header -->
        @if (Model != null && Model.Any())
        {
            <div class="stats-section">
                <div class="table-stats">
                    <div class="stats-item">
                        <span class="stats-label">Total Donations:</span>
                        <span class="stats-value">@Model.Count()</span>
                    </div>
                    <div class="stats-item">
                        <span class="stats-label">Pending:</span>
                        <span class="stats-value">@Model.Count(d => d.Status == "Pending")</span>
                    </div>
                    <div class="stats-item">
                        <span class="stats-label">Distributed:</span>
                        <span class="stats-value">@Model.Count(d => d.Status == "Distributed")</span>
                    </div>
                    <div class="stats-item">
                        <span class="stats-label">Food & Water:</span>
                        <span class="stats-value">@Model.Count(d => d.ResourceType.Contains("Food") || d.ResourceType.Contains("Water"))</span>
                    </div>
                    <div class="stats-item">
                        <span class="stats-label">Medical:</span>
                        <span class="stats-value">@Model.Count(d => d.ResourceType.Contains("Medical"))</span>
                    </div>
                    <div class="stats-item">
                        <span class="stats-label">Clothing:</span>
                        <span class="stats-value">@Model.Count(d => d.ResourceType.Contains("Clothing"))</span>
                    </div>
                </div>
            </div>
        }

        <div class="donations-table-container">
            @if (Model != null && Model.Any())
            {
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Donation ID</th>
                            <th>Donor Information</th>
                            <th>Resource Details</th>
                            <th>Quantity</th>
                            <th>Donation Date</th>
                            <th>Status</th>
                            <th>Contact</th>
                            <th>Pickup Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td class="donation-id">#@donation.DonationID</td>
                                <td class="donor-info">
                                    <div class="donor-avatar">
                                        <span class="avatar-icon">🎁</span>
                                    </div>
                                    <div class="donor-details">
                                        <strong>@donation.DonorName</strong>
                                        <span class="donor-email">@donation.Email</span>
                                    </div>
                                </td>
                                <td class="resource-details">
                                    <div class="resource-type">
                                        <strong>@donation.ResourceType</strong>
                                    </div>
                                    @if (!string.IsNullOrEmpty(donation.Description))
                                    {
                                        <div class="resource-description" title="@donation.Description">
                                            @(donation.Description.Length > 50 ? donation.Description.Substring(0, 50) + "..." : donation.Description)
                                        </div>
                                    }
                                </td>
                                <td class="donation-quantity">
                                    <div class="quantity-badge">
                                        <span class="quantity-number">@donation.Quantity</span>
                                        <span class="quantity-label">items</span>
                                    </div>
                                </td>
                                <td class="donation-date">
                                    @donation.DonationDate.ToString("MMM dd, yyyy")
                                    <div class="date-time">@donation.DonationDate.ToString("hh:mm tt")</div>
                                </td>
                                <td class="donation-status">
                                    <span class="status-badge status-@donation.Status.ToLower()">
                                        @donation.Status
                                    </span>
                                </td>
                                <td class="contact-info">
                                    @if (!string.IsNullOrEmpty(donation.ContactNumber))
                                    {
                                        <div class="contact-phone">📞 @donation.ContactNumber</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No contact</span>
                                    }
                                </td>
                                <td class="pickup-location">
                                    @if (!string.IsNullOrEmpty(donation.PickupAddress))
                                    {
                                        <div class="location-text" title="@donation.PickupAddress">
                                            📍 @(donation.PickupAddress.Length > 30 ? donation.PickupAddress.Substring(0, 30) + "..." : donation.PickupAddress)
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                                <td class="donation-actions">
                                    <button class="action-btn view-btn" title="View Details" onclick="viewDonation(@donation.DonationID)">
                                        👁️
                                    </button>
                                    <button class="action-btn status-btn" title="Update Status" onclick="updateStatus(@donation.DonationID)">
                                        🔄
                                    </button>
                                    <button class="action-btn contact-btn" title="Contact Donor" onclick="contactDonor('@donation.Email', '@donation.ContactNumber')">
                                        📧
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-donations">
                    <div class="no-donations-icon">🎁</div>
                    <h3>No Donations Found</h3>
                    <p>There are no donations in the system yet.</p>
                    <a href="@Url.Action("LogDonation", "Home")" class="action-button">
                        <span class="button-icon">➕</span>
                        Make First Donation
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Action functions
    function viewDonation(donationId) {
        alert('Viewing details for donation #' + donationId);
        // Implement view functionality - could open a modal or redirect to details page
    }

    function updateStatus(donationId) {
        const newStatus = prompt('Update status for donation #' + donationId + ':\nEnter "Pending" or "Distributed"');
        if (newStatus && (newStatus === 'Pending' || newStatus === 'Distributed')) {
            // Implement status update functionality
            alert('Status updated to: ' + newStatus);
        } else if (newStatus) {
            alert('Invalid status. Please enter "Pending" or "Distributed"');
        }
    }

    function contactDonor(email, phone) {
        let contactMethods = [];
        if (email) contactMethods.push('Email: ' + email);
        if (phone) contactMethods.push('Phone: ' + phone);

        if (contactMethods.length > 0) {
            alert('Contact Donor:\n' + contactMethods.join('\n'));
        } else {
            alert('No contact information available for this donor.');
        }
    }

    // Add interactivity to donation rows
    document.addEventListener('DOMContentLoaded', function() {
        const donationRows = document.querySelectorAll('.modern-table tbody tr');

        donationRows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.cursor = 'pointer';
                this.style.transform = 'translateX(5px)';
            });

            row.addEventListener('mouseleave', function() {
                this.style.transform = 'translateX(0)';
            });
        });
    });
</script>