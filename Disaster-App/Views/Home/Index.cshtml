@{
    ViewData["Title"] = "Home Page";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-image: url('/images/protruding-squares.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        flex-direction: column;
        text-align: center;
        padding: 0 50px;
    }

    .main-title {
        font-size: 4rem;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 30px;
        text-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        line-height: 1.2;
    }

    .subtitle {
        font-size: 1.8rem;
        font-weight: normal;
        color: #ffffff;
        margin-top: 20px;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        opacity: 0.9;
    }

    .cta-button {
        background: linear-gradient(135deg, #DB160F, #000000); /* Fixed missing comma */
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        padding: 15px 30px;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(219, 22, 15, 0.4);
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
    }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(219, 22, 15, 0.6);
            color: #fff;
            text-decoration: none;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .main-title {
            font-size: 2.5rem !important;
            padding: 0 20px;
        }

        .subtitle {
            font-size: 1.4rem !important;
        }

        .cta-button {
            font-size: 1.1rem !important;
            padding: 12px 25px !important;
        }

        .content-wrapper {
            padding: 0 30px;
        }
    }

    @@media (max-width: 480px) {
        .main-title {
            font-size: 2rem !important;
        }

        .subtitle {
            font-size: 1.2rem !important;
        }

        .cta-button {
            font-size: 1rem !important;
            padding: 10px 20px !important;
        }

        .background-container {
            background-attachment: scroll;
        }
    }
</style>

<!-- Background Image Container -->
<div class="background-container">
    <div class="background-overlay"></div>
</div>

<!-- Page content -->
<div class="content-wrapper">
    <h1 class="main-title">
        Rapid Response<br>Coordination Hub
        <div class="subtitle">
            Empowering communities with efficient disaster management tools
        </div>
    </h1>
    
    <a href="@Url.Action("Login", "Home")" class="cta-button">
        Let's Start
    </a>
</div>