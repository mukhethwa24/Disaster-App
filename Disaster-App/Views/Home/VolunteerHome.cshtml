@{
    ViewData["Title"] = "VolunteerHome";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-image: url('/images/protruding-squares.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
    }

    .dashboard-container {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        padding: 40px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 80px;
    }

    .dashboard-title {
        color: #ffffff;
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    }

    .dashboard-subtitle {
        color: #e0e0e0;
        font-size: 1.5rem;
        margin: 0;
        opacity: 0.9;
    }

    /* Modern Navigation Menu */
    .nav-menu {
        display: flex;
        gap: 0;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(20px);
        border-radius: 50px;
        padding: 8px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-item {
        position: relative;
    }

    .nav-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px 30px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border-radius: 40px;
        min-width: 140px;
        position: relative;
        overflow: hidden;
    }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.6s;
        }

        .nav-link:hover::before {
            left: 100%;
        }

    .nav-icon {
        font-size: 2rem;
        margin-bottom: 8px;
        transition: all 0.3s ease;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }

    .nav-text {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 4px;
        transition: all 0.3s ease;
    }

    .nav-description {
        font-size: 0.75rem;
        opacity: 0.7;
        transition: all 0.3s ease;
        text-align: center;
        line-height: 1.2;
    }

    /* Individual nav item colors */
    .nav-link.join-team {
        background: rgba(78, 205, 196, 0.1);
        border: 1px solid rgba(78, 205, 196, 0.3);
    }

    .nav-link.create-mission {
        background: rgba(255, 217, 61, 0.1);
        border: 1px solid rgba(255, 217, 61, 0.3);
    }

    .nav-link.active-missions {
        background: rgba(108, 92, 231, 0.1);
        border: 1px solid rgba(108, 92, 231, 0.3);
    }

    .nav-link.volunteer-network {
        background: rgba(255, 107, 107, 0.1);
        border: 1px solid rgba(255, 107, 107, 0.3);
    }

    /* Hover effects */
    .nav-link:hover {
        transform: translateY(-5px) scale(1.05);
        color: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    }

    .nav-link.join-team:hover {
        background: rgba(78, 205, 196, 0.2);
        border-color: #4ecdc4;
        box-shadow: 0 10px 30px rgba(78, 205, 196, 0.3);
    }

    .nav-link.create-mission:hover {
        background: rgba(255, 217, 61, 0.2);
        border-color: #ffd93d;
        box-shadow: 0 10px 30px rgba(255, 217, 61, 0.3);
    }

    .nav-link.active-missions:hover {
        background: rgba(108, 92, 231, 0.2);
        border-color: #6c5ce7;
        box-shadow: 0 10px 30px rgba(108, 92, 231, 0.3);
    }

    .nav-link.volunteer-network:hover {
        background: rgba(255, 107, 107, 0.2);
        border-color: #ff6b6b;
        box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
    }

    .nav-link:hover .nav-icon {
        transform: scale(1.2) rotate(5deg);
    }

    .nav-link:hover .nav-text {
        transform: translateY(-2px);
    }

    .nav-link:hover .nav-description {
        opacity: 1;
        transform: translateY(-1px);
    }

    /* Active state */
    .nav-link.active {
        background: rgba(255, 255, 255, 0.15);
        color: #ffffff;
        transform: translateY(-2px);
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .nav-menu {
            flex-direction: column;
            border-radius: 25px;
            padding: 15px;
            gap: 10px;
        }

        .nav-link {
            flex-direction: row;
            justify-content: flex-start;
            padding: 15px 20px;
            min-width: auto;
            text-align: left;
        }

        .nav-icon {
            margin-bottom: 0;
            margin-right: 15px;
            font-size: 1.5rem;
        }

        .nav-text-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .dashboard-title {
            font-size: 2.5rem;
        }

        .dashboard-subtitle {
            font-size: 1.2rem;
        }
    }

    @@media (max-width: 480px) {
        .dashboard-container {
            padding: 20px 15px;
        }

        .dashboard-title {
            font-size: 2rem;
        }

        .dashboard-subtitle {
            font-size: 1rem;
        }

        .nav-link {
            padding: 12px 15px;
        }

        .nav-icon {
            font-size: 1.3rem;
            margin-right: 12px;
        }

        .nav-text {
            font-size: 0.9rem;
        }

        .nav-description {
            font-size: 0.7rem;
        }

        .background-container {
            background-attachment: scroll;
        }
    }
</style>

<!-- Background Image Container -->
<div class="background-container">
    <div class="background-overlay"></div>
</div>

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Volunteer Coordination Hub</h1>
        <p class="dashboard-subtitle">Empower communities through volunteer management</p>
    </div>

    <!-- Modern Navigation Menu -->
    <nav class="nav-menu">
        <div class="nav-item">
            <a href="@Url.Action("Volunteerss", "Home")" class="nav-link join-team">
                <span class="nav-icon">🌟</span>
                <div class="nav-text-container">
                    <span class="nav-text">Join Our Team</span>
                    <span class="nav-description">Register as volunteer</span>
                </div>
            </a>
        </div>

        <div class="nav-item">
            <a href="@Url.Action("VolunteerTask", "Home")" class="nav-link create-mission">
                <span class="nav-icon">🎯</span>
                <div class="nav-text-container">
                    <span class="nav-text">Create Mission</span>
                    <span class="nav-description">Assign tasks</span>
                </div>
            </a>
        </div>

        <div class="nav-item">
            <a href="@Url.Action("ViewVolunteerTasks", "Home")" class="nav-link active-missions">
                <span class="nav-icon">📋</span>
                <div class="nav-text-container">
                    <span class="nav-text">Active Missions</span>
                    <span class="nav-description">Monitor tasks</span>
                </div>
            </a>
        </div>

        <div class="nav-item">
            <a href="@Url.Action("ViewVolunteers", "Home")" class="nav-link volunteer-network">
                <span class="nav-icon">👥</span>
                <div class="nav-text-container">
                    <span class="nav-text">Volunteer Network</span>
                    <span class="nav-description">View team members</span>
                </div>
            </a>
        </div>
    </nav>
</div>